@import url("https://fonts.googleapis.com/css2?family=Maven+Pro:wght@400;700&family=Michroma&display=swap");

/*Reset CSS*/
* {
  font-size: 62.5%;
  box-sizing: border-box;
  margin: 0px;
  padding: 0px;
  text-decoration: none;
  list-style: none;
}

/* generic */
html {
  background: url(../assets/img/bg/bg.png);
  background-size: cover;
  background-color: black;
}

h1,
h2,
h3,
a {
  font-family: "Maven Pro", sans-serif;
  color: white;
}

p,
h4 {
  font-family: "Michroma", sans-serif;
  color: white;
}

/*Background du menu + menu*/
header {
  -webkit-backdrop-filter: blur(8px);
  backdrop-filter: blur(8px);
  height: 6rem;
  position: sticky;
  top: 0;
  z-index: 1;
}

.menu {
  display: flex;
  justify-content: space-between;
  height: inherit;
  max-width: 180.5rem;
  margin: 0 auto;
  align-items: center;
}

.menu-list {
  display: flex;
  width: 63.5rem;
  justify-content: space-evenly;
  align-items: center;
}

.menu li {
  display: inline-block;
  padding: 0rem 1.25rem;
}

.menu li a {
  transition: all 0.3s ease 0s;
  font-size: 1.6rem;
}

.menu li a:hover {
  color: #2ad0fa;
}

.width-logo-nav {
  width: 2.2rem;
}

.arrow-down {
  padding-bottom: 0.8rem;
  padding-left: 0.3rem;
}

.image-menu-logo {
  width: 3rem;
}

/*Container main 1680px = 168rem BODY*/
.container {
  max-width: 256rem;
  margin: 0 auto;
}

/* 
.imagechip {
  position: absolute;
  left: -100px;
} */

h1 {
  color: #fff;
  text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  font-family: "Maven Pro";
  font-size: 90px;
  font-weight: 400;
  line-height: normal;
  position: relative;
}

.sectionFrame {
  position: relative;
}

.sectionFrame section {
  width: 168rem;
  margin: 0 auto;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 90rem;
  position: relative;
}

.buttonBuy {
  padding: 2.4rem 11rem;
  background-color: #3b81c1;
  font-size: 2.4rem;
  font-weight: 700;
  border-radius: 10px;
}

.backgroundImage {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.backgroundImage img {
  height: 100%;
  width: 100%;
  object-fit: cover;
}

h2 {
  font-family: "Maven Pro", sans-serif;
  font-size: 7.2rem;
  height: 6.5rem;
}

.chipLeft {
  text-align: left;
  margin-top: -30rem;
  padding: 0 10%;
}

.textchip {
  color: #fff;
  font-family: "Michroma", sans-serif;
  font-size: 2rem;
  font-weight: 400;
  text-align: left;
  padding: 0 10%;
  margin-top: 5.2rem;
  max-width: 85rem;
}

#learnMoreLeft {
  width: 18.5rem;
  margin: 5rem 10% 0 10%;
}

#learnMoreLeft a {
  background-color: white;
  color: black;
  font-family: "Michroma", sans-serif;
  font-size: 1.6rem;
  font-weight: 400;
}

.exoWhite {
  display: flex;
}

.whiteBack {
  background-color: #f8f8f8;
}

.textExo {
  color: #fff;
  font-family: "Michroma", sans-serif;
  font-size: 2rem;
  font-weight: 400;
  color: black;
  padding-bottom: 5rem;
  max-width: 77rem;
}

#h2Black {
  color: black;
  padding-bottom: 15rem;
  font-weight: 400;
}

.exoFrame {
  position: relative;
}

.exoFrame section {
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  width: 168rem;
  margin: 0 auto;
  height: 90rem;
  position: relative;
}

.buttonBuyExo {
  padding-top: 1rem;
  color: rgb(255, 255, 255);
  font-size: 2rem;
  text-align: center;
  display: inline-block;
  width: 18.5rem;
  height: 4.5rem;
  border-radius: 3rem;
  background: black;
  font-family: "Michroma", sans-serif;
  font-size: 1.6rem;
  font-weight: 400;
}

.noirBack {
  background: #00040f;
}

.aboutUS {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.aboutUS h3 {
  text-align: left;
  color: black;
  font-size: 4rem;
  padding-left: 2rem;
  padding-top: 2rem;
}

.aboutUS p {
  color: black;
  font-size: 2rem;
  padding: 2rem;
  text-align: left;
}

.bg-White {
  background: white;
  border-radius: 2rem;
  margin-bottom: 2rem;
  width: 61rem;
}

/* footer */
footer {
  height: 74rem;
  background-color: black;
}

footer h3 {
  margin-top: 2rem;
  font-size: 4rem;
}

.footerFlex {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 74rem;
}

footer h4 {
  font-size: 2.4rem;
}

#leftFooter {
  max-height: 66rem;
}

.footerLeftFlex {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 2rem;
}

.footerLeftFlex p {
  width: 30rem;
}

.footerLeftFlex div {
  padding-right: 10rem;
  padding-bottom: 5rem;
}

.footerLeftFlex a {
  text-decoration: underline;
  font-size: 2rem;
  font-family: "Michroma", sans-serif;
}

#whiteBox {
  display: flex;
  flex-wrap: wrap;
  width: 78.3rem;
  height: 66rem;
  background-color: rgb(233, 233, 233);
  padding: 5rem;
  border-radius: 10px;
}

#whiteBox h3 {
  margin-right: 20rem;
}

#buttonContact {
  width: 68rem;
  display: flex;
}

#buttonContact input {
  padding: 0.5rem 26.5rem;
  color: white;
  background-color: black;
  font-size: 2.4rem;
  font-weight: 700;
  border-radius: 10px;
  width: 68rem;
  height: 6.8rem;
}

#buttonContact input:hover {
  cursor: pointer;
}

.surnameFlex {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.blackText {
  color: black;
}

.footerInput {
  font-size: 1.6rem;
  border-radius: 10px;
  border: 0;
  font-family: "Michroma", sans-serif;
  text-indent: 1rem;
  width: 68rem;
}

.tinyInput {
  height: 6rem;
  width: 33.8rem;
}

.largeInput {
  height: 6rem;
}

input:focus {
  outline: none;
}

textarea {
  resize: none;
  padding: 1rem 0;
}

textarea:focus {
  outline: none;
}

@media only screen and (max-width: 1510px) {
  .footerLeftFlex div {
    padding-bottom: 0.5rem;
  }
}
